{
  "name": "appraisily-monorepo",
  "private": true,
  "version": "1.0.0",
  "description": "Monorepo for Appraisily website and related applications",
  "workspaces": [
    "main_page",
    "art-appraisers-landing",
    "shared/*"
  ],
  "scripts": {
    "build": "node scripts/build.js",
    "build:all": "npm run build --workspaces",
    "build:main": "npm run build --workspace=main_page",
    "build:landing": "npm run build --workspace=art-appraisers-landing",
    "dev:main": "npm run dev --workspace=main_page",
    "dev:landing": "npm run dev --workspace=art-appraisers-landing",
    "lint:all": "npm run lint --workspaces",
    "test:all": "npm run test --workspaces",
    "clean:all": "rm -rf ./*/dist ./*/node_modules",
    "postinstall": "node scripts/postinstall.js",
    "prepare": "husky install",
    "lint-staged": "lint-staged",
    "typecheck": "tsc --noEmit --project shared/tsconfig.json",
    "create-submodule": "node scripts/create-submodule.js"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --config eslint.config.mjs --fix",
      "prettier --write"
    ],
    "*.{css,scss}": [
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.22.3",
    "tailwind-merge": "^3.0.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.21.0",
    "@types/react": "^18.3.5",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^7.1.1",
    "@typescript-eslint/parser": "^7.1.1",
    "autoprefixer": "^10.4.18",
    "chalk": "^4.1.2",
    "eslint": "^9.9.1",
    "eslint-plugin-react": "^7.34.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "fs-extra": "^11.2.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "postcss": "^8.4.35",
    "prettier": "^3.2.5",
    "serve": "^14.2.1",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.5.3",
    "typescript-eslint": "^8.25.0",
    "vite": "^5.4.2"
  },
  "author": "Appraisily Team",
  "license": "UNLICENSED"
}
